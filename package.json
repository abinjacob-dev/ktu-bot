  "license": "GPL 3.0",
  "devDependencies": {
    "@types/html-escaper": "^3.0.2",
    "@types/node": "^20.11.25",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "axios-cache-interceptor": "^1.5.1",
    "bullmq": "^5.4.2",
    "dotenv": "^16.4.5",
    "firebase-admin": "^12.0.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "string-strip-html": "^8.5.0",
    "telegraf": "^4.16.3",
    "telegraf-throttler": "^0.6.0"
